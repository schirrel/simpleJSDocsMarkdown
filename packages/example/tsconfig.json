{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2016",
        "lib": ["es2016", "dom"],
        "baseUrl": "./",
        "rootDir": "src/", 
        "moduleResolution": "Node",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "noImplicitAny": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist", "node_modules"]
}
